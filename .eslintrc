{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "eslint-config-prettier"
  ],
  "settings": {
    "react": {
      "version": "16.8.6"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-undef": "off",
    "no-console": "warn"
  },
  "plugins": ["react", "eslint-plugin-cypress", "react-hooks"],
  "env": {
    "browser": true,
    "cypress/globals": true
  }
}
